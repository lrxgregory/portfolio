---
const {width, height} = Astro.props;
const socialLinks = [
	{
		title: 'LinkedIn',
		icon: 'simple-icons:linkedin',
		href: 'https://www.linkedin.com/in/gregoryleroux/',
		aria_label: 'Visit Gregory Leroux\'s LinkedIn profile'
	},
	{
		title: 'Github',
		icon: 'mdi:github',
		href: 'https://github.com/lrxgregory/',
		aria_label: 'Visit Gregory Leroux\'s GitHub repository'
	},
	{
		title: 'CV',
		icon: 'tabler:file-cv',
		href: 'https://gregoryleroux.com/resume.pdf',
		aria_label: 'Visit Gregory Leroux\'s Curiculum">'
	},
	{
		title: 'Email',
		icon: 'fluent:mail-28-regular',
		href: 'mailto:contact@gregoryleroux.com',
		aria_label: 'Contact me">'
	},
];
---

<div class="icons__container">
    {
        socialLinks.map((data) => (
            <a
                href={data.href}
                target="_blank"
                rel="nofollow noreferrer noopener"
				aria-label={data.aria_label}
            >
                <iconify-icon
					class=`skill__icon ${data.title}`
                    icon={data.icon}
                    width={width}
                    height={height}
                />
            </a>
        ))
    }
</div>

<style>
	.icons__container {
		display: flex;
    width: 29.6rem;
    /* padding: 1.3rem 4rem; */
    justify-content: flex-start;
    align-items: flex-start;
    gap: 2rem;
}
.skill__icon{
	color:#fcc22d;
}

	.LinkedIn:hover{
		color: #fcd62d;
	}
	.Github:hover{
	color: #fcd62d;
	}
	.Tiwtter:hover{
	color: #fcd62d;
	}
	.CV:hover{
		color:#fcd62d;
	}



</style>